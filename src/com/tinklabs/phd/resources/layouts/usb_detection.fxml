<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<VBox fx:id="vbox" alignment="CENTER" xmlns:fx="http://javafx.com/fxml/1"
      maxWidth="300" minWidth="300"
      xmlns="http://javafx.com/javafx/2.2">
    <children>
        <Text fx:id="downloads_completion_status" text="Detecting Handy">
            <VBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </VBox.margin>
            <font>
                <Font style="bold" size="16.0"/>
            </font>
        </Text>

        <HBox maxWidth="300" minWidth="300" maxHeight="180" minHeight="180"
        >
            <children>
                <ScrollPane fx:id="scrollpane" maxWidth="150" minWidth="150" hbarPolicy="NEVER"
                            vbarPolicy="AS_NEEDED">
                    <content>
                        <VBox fx:id="port_list" spacing="5">
                            <padding>
                                <Insets bottom="5" left="5" right="5" top="5"/>
                            </padding>
                        </VBox>
                    </content>
                </ScrollPane>
                <ImageView fitWidth="150" preserveRatio="true">
                    <Image url="@../drawables/recovery.png"/>
                </ImageView>
            </children>
        </HBox>

        <Button fx:id="flash" text="Flash">
            <VBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </VBox.margin>
        </Button>
    </children>
</VBox>